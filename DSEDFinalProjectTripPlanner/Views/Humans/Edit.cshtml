@using DSEDFinalProjectTripPlanner.Business
@model DSEDFinalProjectTripPlanner.Models.Human

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Human</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Fullname" class="control-label"></label>
                    <input asp-for="Fullname" class="form-control" />
                    <span asp-validation-for="Fullname" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="FrequentFlyerNumber" class="control-label">Frequent Flyer #</label>
                    <input asp-for="FrequentFlyerNumber" class="form-control" />
                    <span asp-validation-for="FrequentFlyerNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="TicketNumber" class="control-label">Seat #</label>
                    <input asp-for="TicketNumber" class="form-control" />
                    <span asp-validation-for="TicketNumber" class="text-danger"></span>
                </div>
            </div>


            @*Ids to be hidden*@
            <div class="col-md-2">
                <div class="form-group">
                    <label asp-for="TripId" class="control-label"></label>
                    <input asp-for="TripId" class="form-control" readonly="readonly" value="@DatabaseManager.TripId" />
                    <span asp-validation-for="TripId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <label asp-for="FlightId" class="control-label"></label>
                    <input asp-for="FlightId" class="form-control" readonly="readonly" value="@DatabaseManager.FlightId" />
                    <span asp-validation-for="FlightId" class="text-danger"></span>
                </div>
            </div>
            <div class="clear"></div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
