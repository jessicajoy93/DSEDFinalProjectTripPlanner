@using DSEDFinalProjectTripPlanner.Business
@using DSEDFinalProjectTripPlanner.DTO
@using Humanizer
@model DSEDFinalProjectTripPlanner.DTO.TripFlightDTO


@{
    ViewData["Title"] = "Details";
    ViewData["Header"] = "Upcoming Trip";
}

<div class="header">
    <h1>@ViewData["Header"]</h1>



    <h2>@Html.DisplayFor(model => model.AllTrips.Name)</h2>
    <h3>
        @Html.DisplayFor(model => model.AllTrips.DestinationCity),
        @Html.DisplayFor(model => model.AllTrips.DestinationCountry) |
        @DatabaseManager.StartDate(Model.AllTrips.StartDate)
        -
        @DatabaseManager.StartDate(Model.AllTrips.FinishDate)
    </h3>

    <hr />
    @if (Model.AllTrips.Description != null)
    {
        @*this will ony display if Description contains something*@
        <div>

            <p>@Html.DisplayFor(model => model.AllTrips.Description)</p>

            <hr />
        </div>
    }
    <div>
        <a asp-action="Edit" asp-route-id="@Model.AllTrips.Id">Edit</a> |
        <a asp-area="" asp-controller="Flights" asp-action="Create">New Flight</a> |
        <a asp-action="Index">Back to List</a>
    </div>




</div>
<div class="flights">
    @if (Model.AllFlights.Any())
    {
        @foreach (var flight in Model.AllFlights)
        {
            @if (flight.TripId == DatabaseManager.TripId)
            {
                <div class="col-md-12">
                    <hr />
                    <div class="col-md-1">
                        <a asp-action="Edit" asp-route-id="@flight.Id">Edit</a><br />
                        <a asp-action="Details" asp-route-id="@flight.Id">Details</a><br />
                        <a asp-action="Delete" asp-route-id="@flight.Id">Delete</a>

                        <br />
                        @Html.DisplayFor(modelItem => flight.TripId)
                    </div>

                    <div class="col-md-11">
                        <div class="col-md-12">
                            <div class="flightDetails">
                                <h5>
                                    @DatabaseManager.DepartureDate(flight.DepartureDate)
                                </h5>
                                <h4>
                                    @Html.DisplayFor(modelItem => flight.DepartureFrom) to
                                    @Html.DisplayFor(modelItem => flight.ArrivalTo) |
                                    @Html.DisplayFor(modelItem => flight.Airline)
                                    @Html.DisplayFor(modelItem => flight.FlightNumber)
                                </h4>
                                <p>
                                    Confirmation Number: @Html.DisplayFor(modelItem => flight.ConfirmationNumber)
                                </p>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="Departure">
                                <div class="col-md-12">
                                    <label>Depart:</label>
                                </div>

                                <div class="col-md-2">
                                    <p>
                                        @DatabaseManager.DepartureTime(flight.DepartureTime)
                                    </p>
                                </div>
                                <div class="col-md-4">
                                    <p>
                                        @Html.DisplayFor(modelItem => flight.DepartureFrom)
                                    </p>
                                </div>
                                <div class="col-md-3">
                                    <p>
                                        Terminal: @Html.DisplayFor(modelItem => flight.DepartureTerminal)
                                    </p>
                                </div>
                                <div class="col-md-3">
                                    <p>
                                        Gate: @Html.DisplayFor(modelItem => flight.DepartureGate)
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="clear"></div>
                        <div class="col-md-12">
                            <div class="Arrival">
                                <div class="col-md-12">
                                    <label>Arrive:</label>
                                </div>

                                <div class="col-md-2">
                                    <p>
                                        @DatabaseManager.DepartureTime(flight.ArrivalTime)
                                    </p>
                                </div>
                                <div class="col-md-4">
                                    <p>
                                        @Html.DisplayFor(modelItem => flight.ArrivalTo)
                                    </p>
                                </div>
                                <div class="col-md-3">
                                    <p>
                                        Terminal: @Html.DisplayFor(modelItem => flight.ArrivalTerminal)
                                    </p>
                                </div>
                                <div class="col-md-3">
                                    <p>
                                        Gate: @Html.DisplayFor(modelItem => flight.ArrivalGate)
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="Duration">
                                <div class="col-md-2">

                                </div>
                                <div class="col-md-4">
                                    <p>
                                        @*Duration: @DatabaseManager.FlightDuration(item.ArrivalTime, item.DepartureTime)*@
                                    </p>
                                </div>
                                <div class="col-md-3">
                                    <p>
                                        Seats: @Html.DisplayFor(modelItem => flight.Seats)
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    }
    else
    {
        <p>Please add a <a asp-area="" asp-controller="Flights" asp-action="Create">new flight</a>.</p>
    }
</div>






